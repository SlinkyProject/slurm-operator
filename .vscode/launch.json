{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Operator",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceRoot}/cmd/manager/main.go"
    },
    {
      "name": "Launch Exporter",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceRoot}/cmd/exporter/main.go",
      "args": [
        "--server", "http://localhost:6820"
      ],
      "env":{
        "METRICS_TOKEN": ""
      }
    },
    {
      "name": "Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/${relativeFileDirname}"
    },
    {
      "name": "Skaffold Debug slurm-operator",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "host": "localhost",
      "port": 56268,
      "cwd": "${workspaceFolder}",
      "remotePath": "/workspace"
    },
    {
      "name": "Skaffold Debug slurm-operator-webhook",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "host": "localhost",
      "port": 56269,
      "cwd": "${workspaceFolder}",
      "remotePath": "/workspace"
    }
  ]
}
